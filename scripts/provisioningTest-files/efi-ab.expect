#!/usr/bin/expect -f
#
# Launch, login and halt an efi-ab type VM

# Give the VM a reasonable number of seconds to boot
set timeout 90

spawn [lindex $argv 0]

# Login
expect {
    "recovery login:" { exp_continue }
    "login: " { send -- "root\r" }
    timeout   { exit 1 }
}

# Shutdown
expect {
    "# "    { send -- "halt\r" }
    timeout { exit 1 }
}

expect EOF
